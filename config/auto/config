#!/bin/bash
set -eu

lb config noauto \
  --apt-indices false \
  --apt-recommends false \
  --apt-source-archives false \
  --binary-images iso-hybrid \
  --bootloader grub2 \
  --checksums none \
  --debian-installer false \
  --memtest none \
  --parent-mirror-bootstrap $DEBIAN_MIRROR \
  --mirror-bootstrap $DEBIAN_MIRROR \
  --source false \
  --system live \
  --win32-loader false \
  "$@" 2>&1 | tee /tmp/logs/build.log
